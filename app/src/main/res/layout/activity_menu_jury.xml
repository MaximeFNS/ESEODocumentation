<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/allProjectsImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/buttonImage_Project"
        android:scaleType="centerInside"
        android:src="@drawable/eseotest" />

    <ImageButton
        android:id="@+id/juryImage"
        android:layout_width="wrap_content"
        android:layout_height="303dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/buttonImage_Jury"
        android:scaleType="centerInside"
        android:src="@drawable/jury" />

</LinearLayout>